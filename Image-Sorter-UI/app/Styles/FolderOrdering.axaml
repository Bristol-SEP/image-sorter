<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:app.Styles">
    <Design.PreviewWith>
        <controls:FolderOrdering />
    </Design.PreviewWith>

    <Style Selector="controls|FolderOrdering">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="*, Auto"
                      HorizontalAlignment="Stretch"
                      Background="{DynamicResource BackgroundWeak}"
                      Margin="2">
                    <!-- Folder Name -->
                    <TextBlock Grid.Row="0"
                               Foreground="{DynamicResource Text}" Text="{TemplateBinding Text}" />
                    <!-- Button to add features -->
                    <Button Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Foreground="{DynamicResource Text}"
                            Background="{DynamicResource Buttons}"
                            Padding="0"
                            Content="+" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>